<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jd.intelligentfreezer">

    <application
        android:name="com.jd.intelligentfreezer.application.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jd.intelligentfreezer.ui.activity.LaunchDispatchActivity"
            android:launchMode="singleTask"
            android:theme="@style/LaunchDispatchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jd.intelligentfreezer.ui.activity.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/FullScreenTheme" />

        <activity
            android:name="com.jd.intelligentfreezer.ui.activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />

    </application>

</manifest>